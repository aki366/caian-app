<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src= '<%= "/user_images/#{@user.user_image}" %>'> 

      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id && !@user.guest? %>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>

    <ul class="user-tabs">
      <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li class="active"><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>

    <% @likes.each do |l| %>
      <div class="tickets-index-item">
        <div class="ticket-left">
          <img src="<%= "/user_images/#{l.ticket.user.user_image}" %>">
        </div>
        <div class="ticket-right">
          <div class="ticket-user-name">
            <%= link_to(l.ticket.user.name, "/users/#{l.ticket.user.id}") %>
          </div>
          <%= link_to(l.ticket.content, "/tickets/#{l.ticket.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
