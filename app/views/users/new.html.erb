<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">

        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_with model: @user, url: users_path, multipart: true do |f| %>
          <%= f.label "ユーザー名" %>
          <%= f.text_field :name %>

          <%= f.label "メールアドレス" %>
          <%= f.email_field :email %>

          <%= f.label "パスワード" %>
          <%= f.password_field :password %>

          <%#= f.label "パスワード再入力" %>
          <%#= f.password_field :password_confirmation %>

          <%= f.label "ユーザーイメージ" %>
          <%= f.file_field :user_image %>

          <%= f.submit "新規登録" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
