<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_with model: @user, url: login_path do |f| %>
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email %>

          <%= f.label "パスワード" %>
          <%= f.password_field :password %>

          <%= f.label "パスワード再入力" %>
          <%= f.password_field :password_confirmation %>

          <%= f.submit 'ログイン' %>
          <%= link_to 'ゲストとしてログインする', guest_login_path, style: 'color:#1ea3ff;' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
