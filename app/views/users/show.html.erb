<div class="main user-show">
  <div class="container">
    <div class="user-show-profile">
      <img src= '<%= "/user_images/#{@user.user_image}" %>'>
      <ul>
        <li><%= @user.name %></li>
        <li><%= @user.profile %></li>
      </ul>
    </div>

    <div class="user-show-action">
      <% if @user.id == @current_user.id && !@user.guest? %>
        <li>
          <%= link_to("編集", "/users/#{@user.id}/edit") %>
        </li>
        <li>
          <%= link_to "アカウント削除", @user, method: :delete, data: { confirm: 'このアカウントを削除します。この操作は取り消せません。よろしいですか？' }, class: "btn-red inline-block py-2 px-4" %>
        </li>
      <% end %>

      <% if @user.id == @current_user.id %>
      <% else %>
        <div class="user-show-dm">
          <% if @isRoom == true %>
            <a href="/rooms/<%= @roomId %>">チャットへ</a>
          <% else %>
            <%= link_to(rooms_path(user_ids: [@current_user.id, @user.id]), method: :post) do %>
              <div>チャットを始める</div>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <p><%= "10P" %></p>

    </div>

    <div class="user-show-line-middle">
      <div class="line1"></div>
    </div>

    <div class="member-achievement">
      <div class="ticket-categorie">
        <ul>カテゴリ</ul>
        <%# 一旦コメントアウト>
        <%# @categorles.each do |categorle| %>
          <%#= categorle.name %>
        <%# end %>
          <p>共通</p>
          <p>教育</p>
          <p>効率化</p>
          <p>手順・ナレッジ</p>
          <p>案件</p>
          <p>環境・設備</p>
          <p>その他</p>
      </div>

      <div class="ticket-categorie">
        <ul>件数</ul>
        <li>2</li>
        <li>4</li>
        <li>3</li>
        <li>4</li>
        <li>2</li>
        <li>6</li>
        <li>3</li>
      </div>

      <div class="ticket-categorie">
        <ul>ポイント</ul>
        <li>2</li>
        <li>4</li>
        <li>3</li>
        <li>4</li>
        <li>2</li>
        <li>6</li>
        <li>3</li>
      </div>

      <div class="ticket-categorie">
        <ul>トータル</ul>
        <li>2</li>
        <li>4</li>
        <li>3</li>
        <li>4</li>
        <li>2</li>
        <li>6</li>
        <li>3</li>
      </div>
    </div>

    <div class="user-show-line-long">
      <div class="line"></div>
    </div>

    <div class="users-show-ticket">
      <div class="users-show-ticket-no">No.</div>
      <div class="users-show-ticket-subject">タイトル</div>
      <div class="users-show-ticket-name">作成者</div>
      <div class="users-show-ticket-created">作成日</div>
      <div class="users-show-ticket-updated">更新日</div>
    </div>

    <% @ticket.each do |ticket| %>
      <div class="users-show-ticket">
        <div class="users-show-ticket-no">
        <%= ticket.id %>
        </div>

        <div class="users-show-ticket-subject">
          <%= link_to(ticket.subject, "/tickets/#{ticket.id}") %>
        </div>

        <div class="users-show-ticket-name">
          <%= ticket.user.name %>
        </div>

        <div class="users-show-ticket-created">
          <%= ticket.created_at.strftime("%Y-%m-%d %H:%M") %>
        </div>

        <div class="users-show-ticket-updated">
          <%= ticket.updated_at %>
        </div>
      </div>
    <% end %>
  </div>
</div>
