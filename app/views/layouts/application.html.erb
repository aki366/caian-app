<!DOCTYPE html>
<html>
  <head>
    <title>CaianApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

  </head>

  <body>
    <header>
      <div class="sidebartag">
        <div class="line1"></div>
        <div class="line2"></div>
        <div class="line3"></div>
      </div>

      <div class="header-logo">
        <% if @current_user %>
          <%= link_to "Caian", tickets_path %>
        <% else %>
          <%= link_to "Caian", top_path %>
        <% end %>
      </div>

      <% if @current_user %>
        <ul class="header-loginout">
          <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
        </ul>
      <% else %>
        <ul class="header-loginout">
          <li><%= link_to "ログイン", new_login_path %></li>
        </ul>
      <% end %>
    </header>

    <% if @current_user %>
      <%= render 'layouts/sidebar', {
        teams: @teams,
        private_room_users: @private_room_users
        } %>
    <% end %>

    <% if flash[:notice]%>
      <div class="flash">
        <%= flash[:notice]%>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
